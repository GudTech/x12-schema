#!/usr/bin/perl

use X12::Schema;
use File::Slurp 'read_file';
use Data::Dumper;

use Getopt::Std;
my %opts;
getopts('s:f:', \%opts);

my $specfile = $opts{s} or die "-s *specfile* is required";
my $x12file  = $opts{f} or die "-f *x12 file* is required";

my $buffer = read_file( $x12file ) or die "failed to load $x12file";
my @docs = X12::Schema->loadfile( file => $specfile )->parse_concatenation( $buffer );

print Dumper(\@docs);